<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:FlowPanel height="100%" width="100%">
        <g:FlowPanel ui:field="titlePanel">
            <m:MaterialLabel ui:field="title"/>
        </g:FlowPanel>
        <g:ScrollPanel ui:field="scrollPanel">
            <m:MaterialCollection ui:field="messages"/>
        </g:ScrollPanel>
        <g:FlowPanel ui:field="inputPanel">
            <m:MaterialTextBox ui:field="input" placeholder="Type a message..."/>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>