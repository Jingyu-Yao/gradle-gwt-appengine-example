<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:HTMLPanel>
        <header>
            <m:MaterialNavBar paddingLeft="20" backgroundColor="blue">
                <m:MaterialNavBrand ui:field="title"/>
            </m:MaterialNavBar>
        </header>
        <m:MaterialContainer>
            <m:MaterialRow>
                <m:MaterialColumn grid="s6" offset="s3">
                    <g:ScrollPanel ui:field="scrollPanel">
                        <m:MaterialCollection ui:field="messages"/>
                    </g:ScrollPanel>
                    <m:MaterialTextBox ui:field="input" placeholder="Type a message..."/>
                </m:MaterialColumn>
            </m:MaterialRow>
        </m:MaterialContainer>
    </g:HTMLPanel>
</ui:UiBinder>